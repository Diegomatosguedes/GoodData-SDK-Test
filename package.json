{
  "build": {
    "appId": "TOTVS.Agent.Analytics",
    "productName": "TOTVS Agent Analytics",
    "files": [
      "dist/TOTVS-Agent-Analytics/*",
      "dist/TOTVS-Agent-Analytics/src-angular/**/*",
      "dist/TOTVS-Agent-Analytics/src-electron/**/*",
      "dist/TOTVS-Agent-Analytics/icons/**/*",
      "dist/TOTVS-Agent-Analytics/i18n/**/*",
      "!dist/TOTVS-Agent-Analytics-Server/remote/assets/**/*",
      "!dist/TOTVS-Agent-Analytics-Server/remote/logs/**/*",
      "!dist/TOTVS-Agent-Analytics/assets/**/*",
      "!dist/TOTVS-Agent-Analytics/src-electron/encryption/keys/agent.rsa.public",
      "!dist/TOTVS-Agent-Analytics/src-electron/encryption/keys/agent.rsa.private"
    ],
    "extraFiles": [
      "java",
      "icons"
    ],
    "directories": {
      "output": "release-builds",
      "buildResources": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "assets/*",
      "logs/*"
    ],
    "win": {
      "icon": "icons/windows/analytics.ico",
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "icons/linux/analytics.png",
      "target": [
        "deb"
      ],
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "icons/linux/analytics.png",
      "target": [
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "warningsAsErrors": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "oneClick": false,
      "perMachine": true,
      "include": "./installers/installer.nsh"
    }
  },
  "name": "totvs-agent-analytics",
  "version": "1.0.2",
  "author": "Diego Matos Guedes <suporte.gd@totvs.com.br> (https://www.totvs.com/)",
  "homepage": "https://totvstfs.visualstudio.com/TOTVS-GoodData/_git/TOTVS-Agent-Analytics",
  "description": "Programa de envio de dados para a plataforma GoodData.",
  "main": "./dist/TOTVS-Agent-Analytics/boot.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/TOTVS-GoodData/TOTVS-Agent-Analytics.git"
  },
  "scripts": {
    "start": "ng build --configuration production && .\"/node_modules/.bin/tsc\" && electron dist/TOTVS-Agent-Analytics/boot.js --trace-warnings",
    "angular": "ng serve --ssl",
    "build-angular": "ng build --configuration production",
    "build-electron": ".\"/node_modules/.bin/tsc\"",
    "build-electron-w": ".\"/node_modules/.bin/tsc\" -w",
    "electron": "electron --no-sandbox dist/TOTVS-Agent-Analytics/boot.js --trace-warnings",
    "json-server": "json-server --watch ./assets/dbDevelopment.json",
    "azure": "git add . && git commit -m \"Build %date% %time%\" && git push",
    "release": "electron-builder build --win nsis:x64",
    "release-windows-64": "electron-builder build --win nsis:x64 && signtool.exe sign /f .\"/certificate/CodeSigning/CodeSigning.cer\" /csp \"Dinamo HSM Cryptographic Provider\" /v /kc TOTVS /fd sha256 .\"/release-builds/TOTVS Agent Analytics Setup %npm_package_version%.exe\"",
    "release-windows-64-p": "electron-builder build --win --x64 --publish always",
    "release-windows-32": "electron-builder build --win --ia32 && signtool.exe sign /f .\"/certificate/CodeSigning/CodeSigning.cer\" /csp \"Dinamo HSM Cryptographic Provider\" /v /kc TOTVS /fd sha256 .\"/release-builds/TOTVS Agent Analytics Setup %npm_package_version%.exe\"",
    "release-windows-32-p": "electron-builder build --win --ia32 --publish always",
    "release-linux": "electron-builder build --linux --x64",
    "release-linux-p": "electron-builder build --linux --x64 --publish always",
    "release-mac": "electron-builder build --mac --x64",
    "release-mac-p": "electron-builder build --mac --x64 --publish always"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "17.3.12",
    "@angular/common": "17.3.12",
    "@angular/core": "17.3.12",
    "@angular/forms": "17.3.12",
    "@angular/platform-browser": "17.3.12",
    "@angular/platform-browser-dynamic": "17.3.12",
    "@angular/platform-server": "17.3.12",
    "@angular/router": "17.3.12",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@po-ui/ng-components": "17.21.0",
    "@po-ui/ng-sync": "17.21.0",
    "@progress/kendo-theme-default": "^6.3.0",
    "@totvs/po-theme": "^15.15.0",
    "@totvs/thf-theme-kendo": "^4.0.1",
    "core-js": "^3.0.0",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "public-ip": "^6.0.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.5.2",
    "uuid-v4": "^0.1.0",
    "winreg": "^1.2.4",
    "winston": "^3.8.2",
    "ws": "^8.16.0",
    "xml2js": "^0.6.2",
    "zone.js": "~0.14.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler": "^17.3.12",
    "@angular/compiler-cli": "17.3.12",
    "@angular/language-service": "17.3.12",
    "@electron/packager": "^18.1.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.0.0",
    "json-server": "^0.17.3",
    "ts-node": "^10.9.1",
    "typescript": "~5.4.5"
  },
  "'main'": "'./dist/TOTVS-Agent-Analytics/boot.js'"
}
